<%= entertainment.htmlise_title_on_show %>
<%= entertainment.htmlise_offers_on_show %>
<%= entertainment.htmlise_features_on_show %>
<% if entertainment.has_photogallery? %>
  <div class="photogallery">
    <ul>
      <% entertainment.images.each do |image| %>
        <li><%= link_to(image_tag_for(image.url, 124, 94), image.url, rel: :info_gallery) %></li>
      <% end %>
    </ul>
  </div>
<% end %>
