<div class='filters_wrapper'>
  <div class="filters">
    <h1>Подбор сауны</h1>

    <%= form_tag saunas_path, :method => :get do %>
      <div class="filter hide" id='amount'>
        <%= link_to "убрать", '#', :class => 'remove_filter_link' %>
        <div class="filter_label wide">Стоимость</div>
        <div class="filter_inputs">
          <div class="input">
            <%= label_tag :price_min, 'от' %>
            <%= text_field_tag :price_min, @presenter.price_min, :class => 'min' %>
          </div>
          <div class="input">
            <%= label_tag :price_max, 'до' %>
            <%= text_field_tag :price_max, @presenter.price_max, :class => 'max' %>
          </div>
        </div>
        <div class='filter_input_label'>рублей</div>

        <div class="filter_slider_wrapper">
          <div class="filter_slider" data-min='<%= @presenter.min_price %>' data-max='<%= @presenter.max_price %>' data-step='50'></div>
        </div>
      </div>

      <div class="filter hide" id='capacity'>
        <%= link_to "убрать", '#', :class => 'remove_filter_link' %>
        <div class="filter_label wide">Вместительность</div>
        <div class="filter_inputs">
          <div class="input">
            <%= label_tag :capacity_min, 'от' %>
            <%= text_field_tag :capacity_min, @presenter.capacity_min, :class => 'min' %>
          </div>
          <div class="input">
            <%= label_tag :capacity_max, 'до' %>
            <%= text_field_tag :capacity_max, @presenter.capacity_max, :class => 'max' %>
          </div>
        </div>
        <div class='filter_input_label'>человек</div>

        <div class="filter_slider_wrapper">
          <div class="filter_slider" data-min='<%= @presenter.min_capacity %>' data-max='<%= @presenter.max_capacity %>' data-step='50'></div>
        </div>
      </div>

      <div class="criteria_list">
        <div class="criteria_label">Добавить критерии:</div>
        <ul>
          <li>
            <%= link_to "Стоимость", '#', :class => 'amount'  %>
          </li>
          <li>
            <%= link_to "Вместительность", '#', :class => 'capacity'  %>
          </li>
        </ul>
      </div>
      <div class="submit_action">
        <div class="submit_wrapper">
          <input type="submit" value="Применить фильтр" class='submit' />
        </div>
        <div class="results_counter">
          Найдено заведений: <span class='counter'><%= @presenter.total_count %></span>
        </div>
        <div class="clear_wrapper">
          <%= link_to "Очистить", '#' %>
        </div>
      </div>
    <% end %>

  </div>
</div>
