<% content_for :extra_meta do %>
  <meta name='description' content='<%= I18n.t("meta_description.main_page") %>' />
<% end %>

<div class="main_page_affiche">

  <%= render :partial => 'affiches/affiche_today' %>

  <div class="main_page_block_wrapper was_in_city">
    <div class="main_page_block">
      <h1><span class="strong">Фотогалереи</span> города</h1>
      <ul class="clearfix">
        <% @photoreport.reports_for_main_page.each do |photoreport| %>
          <li>
            <div class="relative">
              <div class="counter"><%= photoreport.images_count %></div>
              <div class="images"><%= photoreport.main_images %></div>
            </div>
            <div class="link"><%= photoreport.link %></div>
            <div class="date"><%= photoreport.date %></div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="main_page_block_wrapper more_in_city">
    <div class="main_page_block">
      <ul>
        <% @photoreport.period_links.each do |link| %>
          <%= link %>
        <% end %>
      </ul>
    </div>
  </div>

</div>

<div class="main_page_block_wrapper organizations_in_city">
  <div class="main_page_block">
    <h1><span class="strong">Заведения</span> города</h1>
    <div class="clearfix">
      <% @actual_organizations.groups.each do |fieldset| %>
        <fieldset>
          <legend><a href="<%= fieldset.url %>"><%= fieldset.title %> (<%= fieldset.total_count %>)</a></legend>
          <ul>
            <% fieldset.organizations.each do |organization| %>
              <li>
                <div class="image">
                  <%= organization.image_for_main_page %>
                </div>
              </li>
            <% end %>
          </ul>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>

<div class="main_page_block_wrapper more_in_city">
  <div class="main_page_block">
    <ul>
      <li><a href="<%= organizations_path(organization_class: 'meals') %>">Все заведения питания (<%= @actual_organizations.total_meals %>)</a></li>
      <li><a href="<%= organizations_path(organization_class: 'entertainments') %>">Все развлекательные заведения (<%= @actual_organizations.total_entertainments %>)</a></li>
      <li><a href="<%= organizations_path(organization_class: 'cultures') %>">Все заведения культуры (<%= @actual_organizations.total_cultures %>)</a></li>
    </ul>
  </div>
</div>

<div class="main_page_block_wrapper news_in_city">
  <div class="main_page_block">
    <h1><span class="strong">Новости</span> города</h1>
    <div class="vk_group_news_wrapper">
      <div id="vk_group_news"></div>
      <div id="vk_group_subscribers"></div>
    </div>
  </div>
</div>
