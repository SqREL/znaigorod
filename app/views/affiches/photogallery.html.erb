<div class="head">
  <%= content_tag :h1, @affiche.title.gilensize.html_safe %>
  <%= content_tag :h2, @affiche.original_title.gilensize.html_safe unless @affiche.original_title.blank? %>
</div>
<div class="info">
  <div class="description">
    <div class="closest">
      <%= @affiche.when_with_price %>
    </div>
  </div>
</div>
<div class="gallery_container">
  <% @affiche.images.each do |image| %>
    <%= link_to @affiche.image_tag(image.url, 124, 93, image.description), image.url %>
  <% end %>
</div>
