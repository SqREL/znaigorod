<div class='attachment'>
  <%= f.input :url, :as => :hidden %>
  <div class="choose_file_wrapper">
    <div class="uploaded_file_wrapper attachment">
      <%= image_tag f.object.url if f.object.url.present? %>
    </div>
    <%= link_to t('remove_link'), '#', :class => 'remove_link', :style => ("display: none;" unless f.object.url.present?) %>
    <%= link_to t('choose_file'), '#', :class => 'attachment_url choose_file', :params => "vfs_path=#{parent.vfs_path}/attachments", :style => ('display: none;' if f.object.url.present?) %>
  </div>
</div>
<%= f.input :description %>
