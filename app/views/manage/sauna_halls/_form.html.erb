<%= javascript_include_tag 'nested_form' %>

<%= f.input :title %>
<%= f.input :tour_link %>

<div id="sauna_tabs">
  <ul>
    <li><a href="#sauna_hall_capacity_attributes">Вместительность</a></li>
    <li><a href="#sauna_hall_entertainment_attributes">Развлечения</a></li>
    <li><a href="#sauna_hall_schedules_attributes">Стоимость</a></li>
    <li><a href="#sauna_hall_bath_attributes">Парные</a></li>
    <li><a href="#sauna_hall_pool_attributes">Бассейн</a></li>
    <li><a href="#sauna_hall_water_accessory_attributes">Водные процедуры</a></li>
    <li><a href="#sauna_hall_stuff_attributes">Разное</a></li>
    <li><a href="#sauna_hall_interior_attributes">Интерьер</a></li>
  </ul>

  <div id="sauna_hall_schedules_attributes">
    <%= f.simple_fields_for :sauna_hall_schedules %>
    <%= f.link_to_add 'Добавить интервал', :sauna_hall_schedules %>
  </div>

  <div id="sauna_hall_capacity_attributes">
    <%= f.simple_fields_for :sauna_hall_capacity_attributes, resource.sauna_hall_capacity || resource.build_sauna_hall_capacity do |capacity_form| %>
      <%= capacity_form.input :default, :input_html => { :class => "count" } %>
      <%= capacity_form.input :maximal, :input_html => { :class => "count" } %>
      <%= capacity_form.input :extra_guest_cost, :input_html => { :class => "required cost" } %>
    <% end %>
  </div>

  <div id="sauna_hall_entertainment_attributes">
    <%= f.simple_fields_for :sauna_hall_entertainment_attributes, resource.sauna_hall_entertainment || resource.build_sauna_hall_entertainment do |entertainment_form| %>
      <%= entertainment_form.input :guitar, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :karaoke, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :tv, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :hookah, :input_html => { :class => "cost" } %>

      <%= entertainment_form.input :billiard, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :ping_pong, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :aerohockey, :input_html => { :class => "cost" } %>

      <%= entertainment_form.input :checkers, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :chess, :input_html => { :class => "cost" } %>
      <%= entertainment_form.input :backgammon, :input_html => { :class => "cost" } %>
    <% end %>
  </div>

  <div id="sauna_hall_bath_attributes">
    <%= f.simple_fields_for :sauna_hall_bath_attributes, resource.sauna_hall_bath || resource.build_sauna_hall_bath do |bath_form| %>
      <%= bath_form.input :russian %>
      <%= bath_form.input :finnish %>
      <%= bath_form.input :turkish %>
      <%= bath_form.input :japanese %>
      <%= bath_form.input :infrared %>
    <% end %>
  </div>

  <div id="sauna_hall_pool_attributes">
    <%= f.simple_fields_for :sauna_hall_pool_attributes, resource.sauna_hall_pool || resource.build_sauna_hall_pool do |pool_form| %>
      <%= pool_form.input :size %>
      <%= pool_form.input :contraflow %>
      <%= pool_form.input :geyser %>
      <%= pool_form.input :waterfall %>
      <%= pool_form.input :water_filter %>
    <% end %>
  </div>

  <div id="sauna_hall_water_accessory_attributes">
    <%= f.simple_fields_for :sauna_hall_water_accessory_attributes, resource.sauna_hall_water_accessory || resource.build_sauna_hall_water_accessory do |water_accessory_form| %>
      <%= water_accessory_form.input :jacuzzi %>
      <%= water_accessory_form.input :bucket %>
    <% end %>
  </div>

  <div id="sauna_hall_stuff_attributes">
    <%= f.simple_fields_for :sauna_hall_stuff_attributes, resource.sauna_hall_stuff || resource.build_sauna_hall_stuff do |stuff_form| %>
      <%= stuff_form.input :pit %>
      <%= stuff_form.input :pylon %>
      <%= stuff_form.input :barbecue %>
    <% end %>
  </div>

  <div id="sauna_hall_interior_attributes">
    <%= f.simple_fields_for :sauna_hall_interior_attributes, resource.sauna_hall_interior || resource.build_sauna_hall_interior do |stuff_form| %>
      <%= stuff_form.input :floors %>
      <%= stuff_form.input :lounges %>
    <% end %>
  </div>
</div>

