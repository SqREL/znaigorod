<div class="type">
  <h3>
    Развлекательное заведение
    <%= link_to t('edit'), edit_manage_organization_entertainment_path(entertainment.organization), :class => 'edit_link' %>
    <%= link_to t('add_image'), new_manage_entertainment_image_path(entertainment), :class => 'edit_link' %>
    <%= link_to t('delete'), manage_organization_entertainment_path(entertainment.organization), :method => :delete, :confirm => 'Вы уверены?', :class => 'delete_link' %>
</h3>
  <div>
    <span class="label">Название:</span>
    <% if entertainment.title? %>
      <span class="value"><%= entertainment.title %></span>
    <% else %>
      <span class="blank">Не указано</span>
    <% end %>
  </div>
  <div>
    <span class="label">Описание:</span>
    <% if entertainment.description? %>
      <span class="value"><%= entertainment.description %></span>
    <% else %>
      <span class="blank">Не указано</span>
    <% end %>
  </div>
  <div>
    <span class="label">Категория:</span>
    <% if entertainment.category.present? %>
      <span class="value"><%= entertainment.category %></span>
    <% else %>
      <span class="blank">Не указано</span>
    <% end %>
  </div>
  <div>
    <span class="label">Особенности:</span>
    <% if entertainment.feature.present? %>
      <span class="value"><%= entertainment.feature %></span>
    <% else %>
      <span class="blank">Не указано</span>
    <% end %>
  </div>
  <div>
    <span class="label">Предложение:</span>
    <% if entertainment.offer.present? %>
      <span class="value"><%= entertainment.offer %></span>
    <% else %>
      <span class="blank">Не указано</span>
    <% end %>
  </div>
  <div>
    <% entertainment.images.each do |image| %>
      <%= image_tag(resized_image_url(image.url, 100, 100, false), :alt => image.description, :title => image.description) %>
      <%= link_to "Удалить", manage_entertainment_image_path(entertainment, image), :method => :delete, :confirm => 'Вы уверены?' %>
    <% end %>
  </div>
</div>
