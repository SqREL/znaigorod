<div class="list_header">
  <span class="title">Название</span>
  <span class="date">Дата обновления</span>
  <span class="category">Категория</span>
</div>

<ul class="list_items">
  <% collection.each do |item| %>
	  <% if item.class.superclass == Affiche %>
	    <%= render :partial => "manage/#{item.class.name.underscore.pluralize}/item", :locals => { :item => item } %>
	  <% else %>
	    <%= render :partial => 'manage/organizations/item', :locals => { :item => item } %>
	  <% end %>
	<% end %>
</ul>

<%= paginate collection %>
