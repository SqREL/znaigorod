<div class="row">
  <div class="span1">&nbsp;</div>
  <%= image_tag_for(f.object.url, 100, 100) if f.object.url? %>
</div>

<div class='row-fluid'>
  <%= f.simple_fields_for :images do %>
    <div class='span6'>
      <%= f.hidden_field :url, :as => :string, :input_html => { :class => 'span12' }, :label => false  %>
      <%= f.input :description, :input_html => { :class => 'span12', :rows => 2 } %>
      <%= link_to 'Выбрать изображение', '#', :class => 'choose_file', :id => 'image_wrapper', :params => "vfs_path=#{resource.vfs_path}" %>
    </div>
  <% end %>
</div>
<%= f.link_to_remove t('remove_this_image') %>
