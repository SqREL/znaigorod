<div class="row-fluid">
  <div class="span3">
    <%= f.input :street, :input_html => { :class => 'span12'} %>
  </div>
  <div class="span1">
    <%= f.input :house, :input_html => { :class => 'span12'} %>
  </div>
  <div class="span1">
    <%= f.input :latitude, :input_html => { :class => 'span12'}, :wrapper => false %>
  </div>
  <div class="span1">
    <%= f.input :longitude, :input_html => { :class => 'span12'}, :wrapper => false %>
  </div>
  <div class="span2">
    <%= link_to "<i class='icon-map-marker'></i>&nbsp;Получить координаты".html_safe, '#', :class => 'get_coordinates btn btn-success', :style => "margin-top: 23px;" %>
  </div>
</div>

<div class="map_wrapper" style="margin-top: 10px;">
  <%= render :partial => 'commons/map' %>
</div>
