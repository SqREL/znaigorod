<div class="control-group">
  <%= f.simple_fields_for :schedules do %>
    <%= f.input :day, :as => :select, :collection => Schedule.days_for_select %>
    <%= f.input :from, :as => :string, :input_html => { :style => '40px', :value => f.object.from ? l(f.object.from, :format => '%H:%M') : '' } %>
    <%= f.input :to, :as => :string, :input_html => { :value => f.object.to ? l(f.object.to, :format => '%H:%M') : '' } %>
    <%= f.input :holiday %>
  <% end %>
</div>