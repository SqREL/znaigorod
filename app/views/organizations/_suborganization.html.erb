<%= content_tag :div, suborganization.logo_link, :class => "image" unless suborganization.logo_link.blank? %>
<div class="info">

  <% if @organizations_collection.category_all? %>
    <ul class="categories">
      <% suborganization.categories.each do |category| %>
        <li>
          <%= link_to category, organizations_path(organization_class: @organizations_collection.organization_class.pluralize, category: category.mb_chars.downcase) %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <h2><%= suborganization.title_link %></h2>

  <%= content_tag :div, suborganization.address_link, :class => "place" unless suborganization.address_link.blank? %>

  <div class="contacts">
    <table<%= " class='full'" if suborganization.logo_link.blank? %>>
      <% if suborganization.phone.present? %>
        <tr>
          <td>Телефон:</td>
          <td><%= suborganization.phone %></td>
        </tr>
      <% end %>
      <% if suborganization.site.present? %>
        <tr>
          <td>Сайт:</td>
          <td><%= suborganization.site_link %></td>
        </tr>
      <% end %>
      <% if suborganization.email.present? %>
        <tr>
          <td>E-mail:</td>
          <td><%= suborganization.email_link %></td>
        </tr>
      <% end %>
      <tr>
        <td>Режим работы:</td>
        <td>
          <ul class="schedule">
            <% suborganization.schedules.each do |schedule| %>
              <li<%= " class='today'" if l(Date.today, :format => '%a') == schedule.short_human_day %>>
                <div class="dow">
                  <%= schedule.short_human_day %>
                </div>
                <div class="time">
                  <% if schedule.holiday? %>
                    <div class="string"><%= "Выходной".hyphenate %></div>
                  <% else %>
                    <% if schedule.from == schedule.to %>
                      <div class="string"><%= "Круглосуточно".hyphenate %></div>
                    <% else %>
                      <div class="from">
                        <%= l schedule.from, :format => "%H:%M" %>
                      </div>
                      <div class="to">
                        <%= l schedule.to, :format => "%H:%M" %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
    </table>
  </div>

  <%= content_tag :hr unless suborganization.truncated_description.blank? %>

  <% unless suborganization.truncated_description.blank? %>
    <div class="description">
      <%= suborganization.truncated_description %>
      <p class="more"><%= link_to "Подробнее&hellip;".html_safe, organization_path(suborganization.organization) %></p>
    </div>
  <% end %>

  <%= content_tag :hr if suborganization.features.any? || suborganization.offers.any? || suborganization.cuisines.any? %>

  <% if suborganization.features.any? || suborganization.offers.any? || suborganization.cuisines.any? %>
    <div class="characteristics">
      <% if suborganization.features.any? %>
        <ul>
          <li class="title">Особенности:</li>
          <% suborganization.features.each do |feature| %>
            <li>
              <%= link_to feature, @organizations_collection.filter_link_url(feature: feature.mb_chars.downcase) %>
            </li>
          <% end %>
        </ul>
      <% end %>

      <% if suborganization.offers.any? %>
        <ul>
          <li class="title">Предложения:</li>
          <% suborganization.offers.each do |offer| %>
            <li>
              <%= link_to offer, @organizations_collection.filter_link_url(offer: offer.mb_chars.downcase) %>
            </li>
          <% end %>
        </ul>
      <% end %>

      <% if suborganization.cuisines.any? %>
        <ul>
          <li class="title">Кухня:</li>
          <% suborganization.cuisines.each do |cuisine| %>
            <li>
              <%= link_to cuisine, @organizations_collection.filter_link_url(cuisine: cuisine.mb_chars.downcase) %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>
