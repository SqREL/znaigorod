<% content_for :extra_meta do %>
  <meta name='description' content='<%= I18n.t("meta_description.photogalleries_list.#{@photogallery.period}") %>' />
<% end %>

<div class="content_wrapper">

  <div class="affiches_list">
    <h1><span class="strong">Было</span> в городе</h1>
    <ul class="was_in_city_photos">
      <%= render :partial => "photogalleries_list" %>
    </ul>
  </div>

  <div class="affiches_filter">
    <ul class="categories">
      <li class='current'>
        <div class="title">Фотогалареи</div>
        <ul class="periods">
          <% @photogallery.period_links.each do |link| %>
            <%= link %>
          <% end %>
        </ul>

        <ul class="tags">
          <li class="title">Мероприятия</li>
          <% @photogallery.category_links.each do |link| %>
            <%= link %>
          <% end %>
        </ul>

        <ul class="tags">
          <li class="title">Теги</li>
          <% @photogallery.tag_links.each do |link| %>
            <%= link %>
          <% end %>
        </ul>
      </li>
    </ul>
    <div class="vk_group_wrapper">
      <div id="vk_group_thin"></div>
    </div>
    <div class="vk_recommended_wrapper">
      <div id="vk_recommended"></div>
    </div>
  </div>
</div>

<%= paginate @photogallery.paginated_collection %>
